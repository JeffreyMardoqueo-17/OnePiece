@model IEnumerable<OnePieceWorld.Models.Crew>

@{
    ViewData["Title"] = "Crews";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Lista de Tripulaciones</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Crear Nueva
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Number)</th>
                    <th>@Html.DisplayNameFor(model => model.First().RomanName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TotalPrime)</th>
                    <th>@Html.DisplayNameFor(model => model.First().IsYonko)</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td>@item.Number</td>
                        <td>@item.RomanName</td>
                        <td>@item.TotalPrime</td>
                        <td>
                            @if (bool.TryParse(item.IsYonko, out bool IsYonko) && IsYonko)
                            {
                                <span class="badge bg-danger">Yonko</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Otro</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
